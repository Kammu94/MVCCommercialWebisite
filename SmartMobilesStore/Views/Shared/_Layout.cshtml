

<!DOCTYPE html>
<html ng-app="MyApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobile Store</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
   
    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Assests/css/Stylesheet.css" rel="stylesheet" />

</head>
<body ng-controller="ProductController">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-2 col-md-2 ">

                    <img src="~/Assests/images/logo.jpg" />
                </div>
                <div class="col-lg-6  col-md-6  ">
                    <ul class="nav navbar-nav list-inline pull-right ">
                        <li class="menu-align">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li ng-click="getProductsList()"class="menu-align">@Html.ActionLink("Products", "ProductListPage", "Product")</li>
                        <li class="menu-align">@Html.ActionLink("Admin Portal", "Login", "Admin")</li>


                    </ul>
                </div>
                <div class="col-lg-4 col-md-4 list-border ">

                    <ul class="nav navbar-nav list-inline pull-right">
                        <li class="menu-align"  >
                            <a><i class="fa fa-shopping-cart"></i></a>
                        </li>


                        @if (Session["UserId"] == null && HttpContext.Current.Session != null)
                        {
                            <li class="menu-align">@Html.ActionLink("Login", "Login", "Account")</li>
                            <li class="menu-align">@Html.ActionLink("Register", "UserRegistrationForm", "Account")</li>

                        }
                        else
                        {
                            <li class="list-align">You Are Logged In</li>
                            <li class="menu-align">@Html.ActionLink("Logout", "Logout", "Account")</li>




                        }
                    </ul>


                </div>
            </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">

                <img src="~/Assests/images/banner-1.jpg" />
                <div class="carousel-caption"><button class="btn btn-lg btn-warning">Shop Now</button></div>
            </div>
            <div class="item">

                <img src="~/Assests/images/banner-2.jpg" />
                <div class="carousel-caption"><button class="btn btn-lg btn-primary">Shop Now</button></div>
            </div>
            <div class="item">

                <img src="~/Assests/images/banner-3.jpg" />
                <div class="carousel-caption"><button class="btn btn-lg btn-danger">Shop Now</button></div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container-fluid">
                <div class="navbar navbar-default">
                    <div class="row">
                        <div class="footer-top">
                        <div class="col-lg-3 col-xs-12  ">
                            
                            <img src="~/Assests/images/logo.jpg" class="footer-logo"/>
                            <p class="text-justify footer-brief">
                                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                                Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a
                                galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also
                                the leap into electronic typesetting, remaining essentially unchanged.
                            </p>
                            <ul class="list-inline">

                                <li><a class="facebook"><i class="fa fa-facebook-square fa-lg"></i></a></li>
                                <li>
                                    <a class="facebook"  href="www.facebook.com">
                                        <i class="fa fa-google-plus"></i>
                                    </a>
                                <li>
                                    <a class="facebook" href="www.facebook.com">
                                        <i class="fa fa-twitter-square"></i></a></li>
                                <li><a class="facebook" href="www.facebook.com"><i class="fa fa-instagram" href="www.facebook.com" ></i></a></li>
                            </ul>
                        </div>
                            </div>
                        <div class="col-lg-2 col-xs-12 ">
                            <h3 ><strong>Shipping</strong></h3>
                            <ul class="list-group footer-heading-padding">
                                <li class="list-group"><a href="#">New Products</a></li>
                                <li class="list-group"><a href="#">Discounted Products</a></li>
                                <li class="list-group"><a href="#">Best Sell Products</a></li>
                                <li class="list-group"><a href="#">Manufacturers</a></li>
                                <li class="list-group"><a href="#">Suppliers</a></li>
                                <li class="list-group"><a href="#">Popular Products</a></li>


                            </ul>

                        </div>
                        <div class="col-lg-2 col-xs-12 ">
                            <h3 class=""><strong>My Account</strong></h3>
                            <ul class="list-group footer-heading-padding ">
                                <li class="list-group"><a href="#">My WishList</a></li>
                                <li class="list-group"><a href="#">My Cart</a></li>
                                <li class="list-group"><a href="#">My Add</a></li>
                                <li class="list-group"><a href="#">My Products</a></li>
                                <li class="list-group"><a href="#">Suppliers</a></li>
                                <li class="list-group"><a href="#">Popular Products</a></li>


                            </ul>
                        </div>
                        <div class="col-lg-5 col-xs-12 ">
                            <div class="form-group ">
                                <h3>Get in Touch</h3>
                                <label for=" Name">Name</label>
                                <input type="text" placeholder="Your Name is here" class="form-control input-lg" /><br />
                                <label for=" Email">Email</label>
                                <input type="text" placeholder="Your Email is here" class="form-control input-lg" /><br />
                                <input type="submit" class="btn add-to-cart " value="Submit" />
                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-messages/1.5.6/angular-messages.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>

    <script src="~/Assests/js/AngularScript.js"></script>
    <script src="~/Assests/js/AdminController.js"></script>
    <script src="~/Assests/js/UserAccountController.js"></script>
    <script src="~/Assests/js/OrderController.js"></script>
    <script src="~/Assests/js/ProductController.js"></script>


        

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
   
  
   
  



   

</body>
</html>
