@*@Model ProductDetailModel*@ 
@{
    ViewBag.Title = "DescriptionPage";
    //var userData = @Html.Raw(Json.Encode(Model));
}


<div ng-controller="ProductController">
    <div class="container">
        <section>
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/Assests/images/desc-header.jpg" class="img-responsive" />
                </div>
            </div>

        </section>
        <section>
            <!--Product description starts -->
            @*<div ng-controller="OrderController">*@
                <div class="row">
                    <div class="col-lg-8 col-sm-12 col-xs-12">
                        <div class="description-block" ng-repeat="productDetail in productDescription">
                            <div class="col-lg-6">
                                <img src="~/Assests/images/{{productDetail}}.SecondImage" class="img-responsive" ng-bind="productDetail.imageFirst"/>
                                <span>
                                    <img src="~/Assests/images/{{productDetail.FirstImage}}" class="img-thumbnail "ng-bind="productDetail.FirstImage" />
                                    <img src="~/Assests/images/{{productDetail.ThirdImage}}" class="img-thumbnail "ng-bind="productDetail.ThirdImage" />
                                    <img src="~/Assests/images/{{productDetail.SecondImage}}" class="img-thumbnail "ng-bind="productDetail.SecondImage" />

                                </span>
                                <hr />

                                <!--image thumnails-->


                            </div>
                            <!--description text-->

                            <div class="col-lg-6 description-text ">


                                <p class="prod-details brand-size">
                                    <strong>{{productDetail.ProductName}}</strong>
                                </p>

                                <p class="brand-name">

                                    <strong>{{productDetail.OperatingSystem}}</strong>
                                </p>
                                <hr />
                                @*We are showng  rating with stars *@
                                <p class="color-filter" >
                                    <strong>Color:{{productDetail.Color}}</strong>

                                    @if (Model.Rating == 3)
                                    {
                                        <span class="rating pull-right">
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            
                                        </span>
                                    }
                                    @if (Model.Rating == 1)
                                    {

                                        <span class="rating pull-right">
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                        </span>

                                    }
                                    @if (Model.Rating == 2)

                                    {

                                        <span class="rating pull-right" >
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                        </span>

                                    }
                                    @if (Model.Rating == 4)
                                    {

                                        <span class="rating pull-right" >
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-shine"></i>
                                            <i class="fa fa-star star-dull"></i>
                                        </span>

                                    }
                                    @if (Model.Rating == 5)
                                    {
                                        <i class="fa fa-star star-shine"></i>
                                        <i class="fa fa-star star-shine"></i>
                                        <i class="fa fa-star star-shine"></i>
                                        <i class="fa fa-star star-shine"></i>
                                        <i class="fa fa-star star-shine"></i>

                                    }
                                    @if (Model.Rating == 0)
                                    {

                                        <span class="rating pull-right" >
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            <i class="fa fa-star star-dull"></i>
                                            </span>

                                            }

                                    </p>
                            <hr />

                            <p class="quantity">
                                <strong> Quantity</strong><input type="number" min="0" max="5" class="" />

                            </p>
                            <hr />

                            <p class="price"><strong>Price:<span>&#36</span> {{productDetail.SellingPrice}}</strong></p>
                                <hr />

                            <input type="button" class="btn add-to-cart" value="Add To Cart" ng-click="addToCart(productDetail)">
                        </div>
                    </div>
                    <hr />


                </div>

            </div>
            <div class="col-lg-4 col-sm-4">


            </div>
        @*</div>*@
            

        </section>
        <section>
            <!--for description text-->
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <h4><strong>Description</strong></h4>
                    <hr />
                    <p class="description-text">@Model.Description</p>
                </div>
                <div class="col-md-4 col-sm-12">
                    <!--filter os-->

                </div>
           </div>
                </section>
      
                <!--RELATED PRODUCTS HEADING-->
                <div class="row  banner-margin">

                    <div class="col-md-12">
                        <div class="product-feature-title pull-left">
                            <h2 class="uppercase"><strong>NEW PRODUCTS</strong></h2>
                            <h6>There are many variations of passages of brands available</h6>
                        </div>
                    </div>
                </div>
                <!--RELATED PRODCTS-->
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6" ng-repeat="prod in getProdList">
                        <div class=" product-item-margin">
                            <div class="product-feature-image">
                                <a href="~/Product/DescriptionPage/{{prod.ProductId}}">

                                    <img ng-src="~/Assests/images/{{prod.SecondImage}}" class="img-responsive" />
                                </a>
                                <div class=" prod-info">
                                    <a href="~/Product/DescriptionPage/{{prod.ProductId}}">
                                        <h6 class=" prod-title brand-size" ng-bind="prod.ProductName"></h6>
                                    </a>


                                    <a href="~/Product/DescriptionPage/{{prod.ProductId}}"><h6 class="brand-name" ng-bind="prod.OperatingSystem"></h6></a>
                                    <h3 class="prod-price" ng-bind="prod.SellingPrice"> </h3>
                                    <button class="btn add-to-cart bt-sm">Add To Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
     
    
