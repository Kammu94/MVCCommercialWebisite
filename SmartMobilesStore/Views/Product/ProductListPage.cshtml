@Model ProductDetailModel
@using SmartMobilesStore.Enums

@{
    ViewBag.Title = "ProductListPage";
}
<div ng-controller="ProductController" ng-init="getProductsList();getSelectedFilter()">
    <div class="container">
        <div class="row">

            <div class="col-md-pull-1 col-md-9 col-sm-10 col-xs-10 col-lg-10">
                <img src="~/Assests/images/prod-grid view.jpg" />
            </div>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <!--left side bar-->
                    <label for="Search">Choose Your Mobile</label>
                    <input type="text" placeholder="Enter your Text" ng-model="operatingSystemFilter" />
                    <div class="filter-color-heading"><h4>Filter By Color:</h4></div>
                    <div class="blue-filter-color"><button class="btn btn-primary" ng-click="getProductsByColor('blue');getSelectedFilter()"></button>&nbsp&nbsp<span>Blue</span></div>
                    <div class="red-filter-color"><button class="btn btn-danger" ng-click="getProductsByColor('red');getSelectedFilter()"></button>&nbsp&nbsp<span>Red</span></div>
                    <div class="white-filter-color"><button class="btn btn-default" ng-click="getProductsByColor('white');getSelectedFilter()"></button>&nbsp&nbsp<span>White</span></div>
                    <div class="black-filter-color"><button class="btn btn-black" ng-click="getProductsByColor('black');getSelectedFilter()"></button>&nbsp&nbsp<span>Black</span></div>
                    <br />
                    <br />
                    <div class="selected-filter"ng-show="selectedFilter.length>0"><h3>Selected Filters</h3>
                    <div ng-repeat="filter in selectedFilter"><button class="btn btn-primary" value="{{filter.FilterName}}" ng-click="deleteSelectedFilter(filter.Id)">{{filter.FilterName}}</button></div>
                    
                    </div>
                </div>
                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="sortby-box">
                        <div class="text-center">
                            <span>Sort By</span>
                            <select ng-model="operatingSystemFilter">
                                <option>@Enums.OperatingSystem.All.ToString()</option>
                                <option>@Enums.OperatingSystem.Windows.ToString()</option>
                                <option>@Enums.OperatingSystem.Android.ToString()</option>
                                <option>@Enums.OperatingSystem.Blackberry.ToString()</option>
                                <option>@Enums.OperatingSystem.IOS.ToString()</option>


                            </select>

                        </div>
                    </div>
                    <div class="product-list" ng-controller="OrderController">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12 " ng-repeat="prod in getBulkProductList|filter:operatingSystemFilter">
                                <div class=" product-item">
                                    <div class="product-img">
                                        <a href="~/Product/DescriptionPage/{{prod.ProductId}}">

                                            <img ng-src="~/Assests/images/{{prod.SecondImage}}" class="img-responsive" />
                                        </a>

                                    </div>
                                    <div class="product-info brand-name">
                                        <div class="prod-text text-center">
                                            <a href="~/Product/DescriptionPage/{{prod.ProductId}}">
                                                <h6 class=" prod-title" ng-bind="prod.ProductName"></h6>
                                            </a>
                                        </div>
                                      </div>
