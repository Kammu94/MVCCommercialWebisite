@Model ProductDetailModel 
@{
    ViewBag.Title = "DescriptionPage";
}


<div ng-controller="ProductController"ng-init="getLatestProducts()">
    <div class="container">
        <section>
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/Assests/images/desc-header.jpg" class="img-responsive" />
                </div>
            </div>

        </section>
        <section>
            <!--Product description starts -->
            <div class="row">
                <div class="col-lg-8 col-sm-8">
                    <div class="description-block">
                        <div class="col-lg-6">
                            <img src="~/Assests/images/@Model.SecondImage" class="img-responsive" /> 
                            <span>
                                <img src="~/Assests/images/@Model.ThirdImage" class="img-thumbnail " />
                                <img src="~/Assests/images/@Model.SecondImage" class="img-thumbnail " />
                                <img src="~/Assests/images/@Model.ThirdImage" class="img-thumbnail " />
                                
                            </span>
                            <hr />
                           
                                <!--image thumnails-->

                           
                        </div>
                            <!--description text-->
                           
                        <div class="col-lg-6">
                           

                            <p class="prod-details">
                              <strong>@Model.ProductName</strong>
                              </p>
                            
                           <p class="brand-name">
                                <strong>@Model.OperatingSystem</strong>
                            </p>
                            <hr />
                        
                            <p class="color-filter">@Model.Color
                                <span class="rating pull-right  ">@Model.Rating</span>
                            </p>
                            <hr />
                        
                        <p class="quantity">
                            <input type="text"class="" />

                        </p>
                            <hr />
                       
                        <p class="price">@Model.SellingPrice</p>
                        <p class="buy-btn"><input type="submit" class="buy-btn btn-btn-danger" value="BUY NOW"></p>
                      </div>
                        <hr />
                       
                       
                           
                      
                        
                                

                </div>
                   
                </div>
                <div class="col-lg-4 col-sm-4">


                </div>
        </div>
            

        </section>
        <section>
            <!--for description text-->
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <h4><strong>Description</strong></h4>
                    <hr />
                    <p class="description-text">Description be here</p>
                </div>
                <div class="col-md-4 col-sm-12">
                    <!--filter os-->

                </div>
           </div>
                </section>
      
                <!--RELATED PRODUCTS HEADING-->
                <div class="row  banner-margin">

                    <div class="col-md-12">
                        <div class="product-feature-title pull-left">
                            <h2 class="uppercase"><strong>NEW PRODUCTS</strong></h2>
                            <h6>There are many variations of passages of brands available</h6>
                        </div>
                    </div>
                </div>
                <!--RELATED PRODCTS-->
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6" ng-repeat="prod in getProdList">
                        <div class=" product-item-margin">
                            <div class="product-feature-image">
                                <a href="#">

                                    <img ng-src="~/Assests/images/{{prod.SecondImage}}" class="img-responsive" />
                                </a>
                                <div class=" prod-info">
                                    <a href="#">
                                        <h6 class=" prod-title" ng-bind="prod.ProductName"></h6>
                                    </a>


                                    <h6 class="brand-name" ng-bind="prod.OperatingSystem"></h6>
                                    <h3 class="prod-price" ng-bind="prod.SellingPrice"> </h3>
                                    <button class="btn btn-success bt-sm">Add To Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
     
    
